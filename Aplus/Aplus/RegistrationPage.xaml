<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplus.RegistrationPage"
             Background="white"
             Visual = "Material">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Регистрация"
                   Margin="0, 0, 75, 0"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   FontSize="Title"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Логин" BackgroundColor="#E8E8E8" PlaceholderColor="Black" Margin="15"/>
            <Entry Placeholder="E-mail" BackgroundColor="#E8E8E8" PlaceholderColor="Black" Margin="15"/>
            <Entry Placeholder="Пароль" IsPassword="True" BackgroundColor="#E8E8E8" PlaceholderColor="Black" Margin="15"/>
            <Entry Placeholder="Пароль" IsPassword="True" BackgroundColor="#E8E8E8" PlaceholderColor="Black" Margin="15"/>
            <Button x:Name="btn_Regist" Text="Зарегистрироваться" HorizontalOptions="Center" BackgroundColor="#00B2FF" TextColor="White" BorderRadius="45" WidthRequest="200" VerticalOptions="EndAndExpand" Margin="0,0,0,50"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
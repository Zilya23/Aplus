<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplus.AuthorizationPage"
             Background="white"
             Visual = "Material">
    <ContentPage.Content>
        <StackLayout  VerticalOptions="CenterAndExpand">
            <Image Source="image9.png" Aspect="AspectFit" Margin="15"/>
            
            <StackLayout>
                <Entry Placeholder="Логин" BackgroundColor="#E8E8E8" PlaceholderColor="Black" Margin="15"/>
                <Entry Placeholder="Пароль" IsPassword="True" BackgroundColor="#E8E8E8" PlaceholderColor="Black" Margin="15"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button x:Name="btn_Regist" Text="Зарегистрироваться" HorizontalOptions="Start" BackgroundColor="#00B2FF" TextColor="White" BorderRadius="45" WidthRequest="200" Clicked="btn_Regist_Clicked"/>
                <Button x:Name="btn_Authoriz" Text="Войти" HorizontalOptions="End" BackgroundColor="#00B2FF" TextColor="White" BorderRadius="45" WidthRequest="200" Clicked="btn_Authoriz_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>